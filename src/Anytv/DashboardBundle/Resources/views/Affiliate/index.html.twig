{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        
          <h1 class="title">{{ title|upper }}</h1><span>last affiliate id = {{ max_affiliate_id }}</span>
          
          {% for flashMessage in app.session.flashbag.get('flash_message') %}
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <strong>{{ flashMessage }}</strong>
            </div>
          {% endfor %}
    
    <p>&nbsp;</p>
    <div style="margin-bottom: 20px">
      {% if(app.session.get('affiliate_keyword') or app.session.get('affiliate_country')) %}
        <a href="{{ path('affiliates_reset') }}">reset</a>
      {% endif %}
      {{ form_start(form, {'action': path('affiliates'), 'method': 'POST'}) }}
         {{ form_errors(form) }}
         {{ form_errors(form.affiliate_keyword) }}
         {{ form_widget(form.affiliate_keyword, {'attr': {'class': 'affiliate_keyword_field'}}) }}
         {{ form_label(form.affiliate_country) }}
         {{ form_errors(form.affiliate_country) }}
         {{ form_widget(form.affiliate_country, {'attr': {'class': 'affiliate_country_field'}}) }}
         {{ form_label(form.affiliate_paypal) }}
         {{ form_errors(form.affiliate_paypal) }}
         {{ form_widget(form.affiliate_paypal, {'attr': {'class': ''}}) }}
         {{ form_label(form.affiliate_status) }}
         {{ form_errors(form.affiliate_status) }}
         {{ form_widget(form.affiliate_status, {'attr': {'class': 'affiliate_status_field'}}) }}
         {{ form_widget(form.affiliate_search) }}
         {{ form_widget(form.affiliate_update) }}
         {{ form_widget(form.affiliate_update_paypal) }}
       {{ form_end(form) }}
    </div>

    
      <table border="1" cellspacing="15" cellpadding="15">
        <tr>
         <th>Id</th>
         <th>{% trans %}Affiliate{% endtrans %} Id</th>
         <th>{% trans %}Company{% endtrans %}</th>
         <th>{% trans %}Country{% endtrans %}</th>
         <th>{% trans %}Date Added{% endtrans %}</th>
         <th>{% trans %}Paypal{% endtrans %}</th>
         <th>{% trans %}Signup IP{% endtrans %}</th>
         <th>{% trans %}Thumbnail{% endtrans %}</th>
       </tr>
       {% for affiliate in affiliates %}
         <tr>
           <td>{{ affiliate.id }}</td>
           <td>{{ affiliate.affiliateId }}</td>
           <td><a href="{{ path('affiliate_view', { 'id' : affiliate.id }) }}" title="Edit">{{ affiliate.company }}</a></td>
           {% if(affiliate.country) %}
             <td><a href="{{ path('country_view', { 'id' : affiliate.country.id }) }}" title="{% trans %}View{% endtrans %}">{{ affiliate.country }}</a></td>
           {% else %}
             <td>&nbsp;</td>
           {% endif %}
           <td>{{ affiliate.getDateAddedAsString() }}</td>
           <td>{{ affiliate.paypalEmail }}</td>
           <td>{{ affiliate.signupIp }}</td>
           {% if(affiliate.thumbnail) %}
             <td><img src="{{ asset(affiliate.getWebPath()) | apply_filter('profile_thumbnail') }}" alt="{{ affiliate.company }}" /></td>
           {%  else %}
             <td>&nbsp;</td>
           {% endif %}
         </tr>
       {% endfor %} 
      </table>
       
     
      {% if (total_pages > 1) %}
        <ul class="pagination">
        {% if(page > 1) %}
          <li><a href="{{ path('affiliates', {'page':(page-1)}) }}"  title="{{ (page-1) }}">&laquo;</a></li>
        {% endif %}
        {% for i in 1..total_pages if((page-i)|abs < 8) %}
          {% if(page == i) %}
            <li class="active"><span>{{ i }}<span class="sr-only">(current)</span></span></li>
          {% else %}
            <li><a href="{{ path('affiliates', {'page':i}) }}" title="{{ i }}">{{ i }}</a></li>
          {% endif %}
        {% endfor %}
        {% if(page < total_pages) %}
          <li><a href="{{ path('affiliates', {'page':(page+1)}) }}" title="{{ (page+1) }}">&raquo;</a></li>
        {% endif %}
        </ul>
      {% endif %}
          
          
      <div class="cl-20"></div>
      </div>
      
		</div>
	</div>
</section>

    {{ parent() }}
    
        
    

    
{% endblock %}
