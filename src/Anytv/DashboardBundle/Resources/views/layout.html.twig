{% extends '::base.html.twig' %}

{% block title %}Any.TV - {% trans %}Dashboard{% endtrans %}{% endblock %}

{% block stylesheets %}
  {{ parent() }}
  <link href="{{ asset('bundles/anytvdashboard/css/dashboard-menu.css') }}" rel="stylesheet" />
{% endblock %}
        
{% block favicon %}
  <link rel="icon" type="image/x-icon" href="{{ asset('favicondash.ico') }}" />
{% endblock %}
  
{% block body %}
  <body class="dashbrd-bg">
{% endblock %}
          
{% block header_tag %}
  <header id="top-navigation">
{% endblock %}
  
{% block header %}
  <a href="{{ path('anytv_dashboard_homepage') }}" title="Any.TV Dashboard" class="navbar-brand">
    <img src="{{ asset('bundles/anytvdashboard/images/anytv-dashboard-logo.png') }}" alt="Any.TV Dashboard" />
  </a>
{% endblock %}
      
{% block authentication %}
  {% if(app.user) %}
    <p class='navbar-text pull-right'>{% trans %}You're logged in as{% endtrans %} {{ app.user }} | <a href="{{ path('logout') }}" class="navbar-link" title="{% trans %}Logout{% endtrans %}">{% trans %}Logout{% endtrans %}</a></p>
  {% endif %}
{% endblock %}
  
{% block transmenu %}
<a href="{{ path('anytv_dashboard_homepage', { _locale: app.request.get('_locale', 'en') }) }}" class="dropdown-toggle" data-toggle="dropdown">
{% if(app.request.get('_locale', 'en') == 'zh') %}
  chinese
{% else %}
  english
{% endif %}
&nbsp;<b class="caret"></b></a>
<ul class="dropdown-menu dd-height">
  <li>
    <a href="{{ path('anytv_dashboard_homepage', { _locale: 'en' }) }}" title="English (US)">
      English
    </a>
  </li>
  <li>
    <a href="{{ path('anytv_dashboard_homepage', { _locale: 'zh' }) }}" title="Chinese">
      Chinese
    </a>
  </li>
</ul>
{% endblock %}
  
{% block submenu %}
<div id="sub-nav" class="dashbrd">
<div class="container">
<nav class="subnav-cllps db-lnks">
  {% if(app.user) %}
  <ul id="nav">
    <li><a href="{{ path('profile_view') }}" title="{% trans %}My Profile{% endtrans %}">{% trans %}My Profile{% endtrans %}</a></li>
    {% if is_granted('ROLE_ADMIN') %}
      <li><a href="{{ path('advertisers') }}" title="Advertisers">Advertisers</a></li>
      <li><a href="{{ path('offer_groups') }}" title="Offer Groups">Offer Groups</a></li>
      <li><a href="{{ path('offers') }}" title="Offers">Offers</a></li>
      <li><a href="{{ path('affiliates') }}" title="Affiliates">Affiliates</a></li>
      <li><a href="{{ path('traffic_referrals') }}" title="Traffic Referrals">Traffic Referrals</a></li>
      <li><a href="{{ path('countries') }}" title="Countries">Countries</a></li>
    {% endif %} 
  </ul>
  {% endif %}
</nav>
</div>
</div>
{% endblock %}
 
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/anytvdashboard/js/profile_tabs.js') }}"></script>
{% endblock %}
     
    
        

    
