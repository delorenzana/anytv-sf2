{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}
    {{ parent() }}
    <h1 class="title">{{ title|upper }}</h1>
    
    <p>&nbsp;</p>
    <div>
      {% if(app.session.get('keyword')) %}
        <a href="{{ path('offers_reset') }}">reset</a>
      {% endif %}
      {{ form_start(form, {'action': path('offers'), 'method': 'POST'}) }}
         {{ form_errors(form) }}
         {{ form_errors(form.keyword) }}
         {{ form_widget(form.keyword, {'attr': {'class': 'offer_keyword_field'}}) }}
         {{ form_widget(form.search, {'attr': {'class': 'offer_search_button'}}) }}
       {{ form_end(form) }}
    </div>

    <div class="symfony-blocks-welcome">
      <table border="1" cellspacing="15" cellpadding="15">
        <tr>
         <th>ID</th>
         <th>{% trans %}Offer{% endtrans %}</th>
         <th>{% trans %}Status{% endtrans %}</th>
         <th>{% trans %}Advertiser{% endtrans %}</th>
         <th>{% trans %}Preview{% endtrans %}</th>
       </tr>
       {% for offer in offers %}
         <tr>
           <td>{{ offer.offerId }}</td>
           <td><a href="{{ path('offer_edit', { 'id' : offer.id }) }}" title="Edit">{{ offer.name }}</a></td>
           <td>{{ offer.status }}</td>
           {% if(offer.advertiser) %}
             <td><a href="{{ path('advertiser_edit', { 'id' : offer.advertiser.id }) }}" title="Edit">{{ offer.advertiser }}</a></td>
           {% else %}
             <td>&nbsp;</td>
           {% endif %}
           <td><a href="{{ offer.previewUrl }}" target="_blank">preview</a></td>
         </tr>
       {% endfor %} 
      </table>
       
      {% if (total_pages > 1) %}
        <ul>
        {% for i in 1..total_pages %}
          {% if(page == i) %}
            <li>{{ i }}</li>
          {% else %}
            <li><a href="{{ path('offers', {'page':i}) }}" title="{{ i }}">{{ i }}</a></li>
          {% endif %}
        {% endfor %}
        </ul>
      {% endif %}
        
    </div>

    <div class="symfony-blocks-help">
        
       
    </div>
{% endblock %}
