{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}
    {{ parent() }}
    <em><a href="{{ path('offer_view', { 'id' : offer.id }) }}" title="{% trans %}View{% endtrans %}">{% trans %}view{% endtrans %}</a></em>
    
    <h1 class="title">{{ title }} - {{ offer }}</h1>
    
    <p>&nbsp;</p>

    <div class="symfony-blocks-welcome">
       
       {{ form_start(form, {'action': path('offer_edit', { 'id' : offer.id }), 'method': 'POST'}) }}
          
         {{ form_errors(form) }}
        
         {{ form_row(form.name) }}
         {{ form_row(form.description) }}
         {{ form_row(form.advertiser) }}
         {{ form_row(form.offerUrl) }}
         {{ form_row(form.previewUrl) }}
         {{ form_row(form.status) }}
         {{ form_row(form.expirationDate) }}
         {% if(offer.thumbnail) %}
           <img src="{{ asset(offer.getWebPath()) }}" alt="{{ offer.name() }}" style="width:100px" />
         {% endif %}
         {{ form_row(form.file) }}
       {{ form_end(form) }}
       
        
    </div>

    <div class="symfony-blocks-help">
        
       
    </div>
{% endblock %}
