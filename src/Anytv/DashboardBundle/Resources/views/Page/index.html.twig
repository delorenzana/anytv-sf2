{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}

<section id="content">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        
          <h1 class="title">{{ title|upper }}</h1>
    
    <p>&nbsp;</p>
    

    
      <table border="1" cellspacing="15" cellpadding="15">
        <tr>
         <th>{% trans %}Page key{% endtrans %}</th>
         <th>{% trans %}Title{% endtrans %}</th>
       </tr>
       {% for page in pages %}
         <tr>
           <td><a href="{{ path('page_edit', { 'id' : page.id }) }}" title="{% trans %}Edit{% endtrans %}">{{ page.pageKey }}</a></td>
           <td>{{ page.title }}</td>
         </tr>
       {% endfor %} 
      </table>
       
      
          
          
      <div class="cl-20"></div>
      </div>
      
		</div>
	</div>
</section>

    {{ parent() }}
    
        
   
{% endblock %}
