{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}


<section id="content">
  <div class="container">
  <div class="row-fluid">
    <div class="col-lg-4">
    <div class="panel panel-default user-panel">
      <div class="panel-body">
            
             <div class="btn-group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                  {% if(affiliate.thumbnail) %}
           <img src="{{ asset(affiliate.getWebPath()) | apply_filter('profile_thumbnail') }}" alt="{{ affiliate.company }}" />
         {% endif %}
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                  <li><a href="#">My Account</a></li>
                  <li><a href="#">Settings</a></li>
                </ul>
              </div>

          <em><a href="{{ path('profile_view') }}" title="{% trans %}View{% endtrans %}">{% trans %}view{% endtrans %}</a></em>
                
                {{ form_start(form, {'action': path('profile_company_edit', { 'id' : affiliate.id }), 'method': 'POST'}) }}
          
         {{ form_errors(form) }}
        
         {{ form_row(form.company) }}
         {{ form_row(form.address1) }}
         {{ form_row(form.address2) }}
         {{ form_row(form.city) }}
         {{ form_row(form.region) }}
         {{ form_row(form.country) }}
         {{ form_row(form.other) }}
         {{ form_row(form.zipcode) }}
         
         {{ form_row(form.file) }}
         {{ form_row(form.phone) }}
         {{ form_row(form.fax) }}
         
       
       {{ form_end(form) }}
           
      </div>
    </div>

    <div class="col-lg-8">
      
    </div>  
  </div>
  </div>
</div>
</section>
    
                
      
                
               
              
    
    {{ parent() }}
    
    
    
       
       
       
        
    
{% endblock %}
