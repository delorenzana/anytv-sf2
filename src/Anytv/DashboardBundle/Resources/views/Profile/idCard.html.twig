{% if(affiliate and affiliate_user) %}
<div id="user-db">
  <div class="panel panel-default user-panel">
    <div class="panel-heading"></div>
    <div class="user-pic">	
      {% if(affiliate.thumbnail) %}
        <img src="{{ asset(affiliate.getWebPath()) | apply_filter('profile_thumbnail') }}" alt="{{ affiliate.company }}" />
      {% else %}
        <img src="{{ asset('bundles/anytvdashboard/images/test-user.jpg') }}">
      {% endif %}
    </div>				
    <div class="panel-body">
      <h3><span>{{ affiliate_user }}</span></h3>
      <div class="user-det">
        <p>{% trans %}Refer-a-Friend link{% endtrans %}:</p>
        <div class="input-group">
	  <span class="input-group-btn">
	    <button class="btn btn-default" type="button">Copy</button>
	  </span>
	  <input type="text" class="form-control" value="{{ url('signup', { 'id': affiliate.affiliateId }) }}" disabled>
	</div>
      </div>
    </div>
    <div id="user-menus">
      <ul class="nav nav-pills nav-stacked">
        <li class="active">
          <a href="#">
            <span class="badge pull-right">42</span>
	    Dashboard
	  </a>
	</li>
	<li><a href="{{ path('profile_view') }}">{% trans %}My Profile{% endtrans %}</a></li>
	<li><a href="{{ path('profile_offers') }}">{% trans %}Offers{% endtrans %}</a></li>						  
      </ul>
    </div>
  </div> 
</div>			
{% endif %}