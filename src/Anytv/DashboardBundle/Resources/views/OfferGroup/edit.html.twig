{% extends 'AnytvDashboardBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}
    {{ parent() }}
    <em><a href="{{ path('offer_group_view', { 'id' : offer_group.id }) }}" title="{% trans %}View{% endtrans %}">{% trans %}view{% endtrans %}</a></em>
    
    <h1 class="title">{{ title }} - {{ offer_group }}</h1>
    
    <p>&nbsp;</p>

    <div class="symfony-blocks-welcome">
       
       {{ form_start(form, {'action': path('offer_group_edit', { 'id' : offer_group.id }), 'method': 'POST'}) }}
          
         {{ form_errors(form) }}
        
         {{ form_row(form.name) }}
         
         {{ form_row(form.status) }}
        
        {% if(offer_group.thumbnail) %}
      <img src="{{ asset(offer_group.getWebPath()) }}" alt="{{ offer_group }}" style="width:100px" />
    {% endif %}
        
          {{ form_row(form.file) }}
         
       {{ form_end(form) }}
       
        
    </div>

    <div class="symfony-blocks-help">
        
       
    </div>
{% endblock %}
