{% if(faqs) %}
<div id="all-pane" class="tab-pane active">
  <div id="sidebar" class="tabbable">
    <div style="row">
      <div class="col-lg-3">
        <ul id="sidenav" class="nav nav-pills nav-stacked">
          {% for faq in faqs %}
	    <li><a href="javascript:void(0)" onclick="showFaq({{ faq.id }});" title="{{ faq.question|raw }}" data-toggle="tab"><strong>{{ faq.question|raw }}</strong></a></li>
          {% endfor %}																
	</ul>
      </div>
      <div class="col-lg-9">				
        <div class="tab-content">
          {% for faq in faqs %}
	    <div class="tab-pane active" id="faq_answer_{{ faq.id }}" style="display:none">
	      {{ faq.answer|raw }}
	    </div>
          {% endfor %}	
	</div>
      </div>
    </div>
  </div>
</div>
{% endif %}

