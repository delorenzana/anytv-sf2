{% extends 'AnytvMainBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {% trans %}Home{% endtrans %}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}
    
    <div id="content">
    <section class="banner">
        <div class="container">
          <div class="container-fluid">
            <div class="row-fluid">
          		<div class="cta-home">
                <div class="col-lg-5">
            			<h3>{% trans %}A new kind of YouTube Network{% endtrans %}</h3>
            			<p>{% trans %}Don’t unpartner from your YouTube Network{% endtrans %}</p>
                                {% if(app.user == false) %}
                                  <p><a href="{{ path('signup') }}" class="btn btn-primary btn-lg btn-join">{% trans %}Join any.TV{% endtrans %}</a></p>
                                {% endif %}
                  
                </div>
                <div class="col-lg-7">
                
            			<div class="video-container">
								         <iframe src="http://www.youtube.com/embed/UCqJAZuvUS0?wmode=transparent" frameborder="0" width="560" height="315"></iframe>
								</div>	
                
                </div>
          		</div>
            </div>
          </div>          
        </div>       
    	</section>
            
           
    	
     
     <div id="gameslist-block">
       {{ render(controller('AnytvDashboardBundle:Offer:embed', {'page': 1})) }}
     </div>
            
            {{ render(controller('AnytvDashboardBundle:Profile:offerViewPopup')) }}
      
            <section id="networks">
			<div class="container">	
				<div class="row-fluid"> 
                                    <div class="col-lg-12">
						<div class="net-title">
							
						</div>
					</div>
				<div class="col-lg-4">
					<div id="net-col">					
						<h4>George is Back!</h4>
						<p>As promised.</p>
                <p>I am the ex-President and founder of TGN, my old company that I sold to BroadbandTV in 2012. It was time for something new.</p>
                <p>Will you <b>help me</b> build any.TV together?</p>
                <a href="{{ path('staff') }}" class="btn btn-default">Help George</a> 

					</div>					
				</div>
				<div class="col-lg-4">
					<div id="net-col">
						<h4>Do Not Unpartner!</h4>
                <p>Really.</p>
                <p>You do not need to unpartner from your current Network to join any.TV.</p>
                <p>Why?</p>
                <p>Because we <b>don’t</b> partner channels.</p>
                {% if(app.user == false) %}
                  <a href="{{ path('signup') }}" class="btn btn-default">Join any.TV</a>  
                {% endif %}
					</div>	
				</div>
				<div class="col-lg-4">
					<div id="net-col">
						<h4>10% Lifetime Bonus!</h4>
                <p>Yes, we mean forever.</p>
                <p>any.TV pays you a 10% bonus of everything your referrals make, our way of saying “Thank You” for recommending any.TV to your friends and partners!</p>
                <p>This is <b>not</b> a pyramid scheme.</p>
                <a href="http://www.youtube.com/watch?v=Hs1Tq_Mi_Yg&list=PLyI74zGGymu8k7eVhGPcVSh3nKljHfiVX" target="_blank" class="btn btn-default">Learn More</a>
					</div>	
				</div>
			</div>
		</div>
	</section>
            
            
      	

	<section id="our-partners">
		<div class="container">
			<div class="op-title">
				
			</div>
		</div>
	</section>      

      {{ parent() }}
        </div>
    
{% endblock %}
     
{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('bundles/anytvdashboard/js/offers.js') }}"></script>
{% endblock %}


