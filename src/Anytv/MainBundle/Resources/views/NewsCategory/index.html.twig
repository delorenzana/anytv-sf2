{% extends 'AnytvMainBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - {{ title}}{% endblock %}
     
{% block content_header '' %}

{% block content %}
    {% set version = constant('Symfony\\Component\\HttpKernel\\Kernel::MAJOR_VERSION') ~ '.' ~ constant('Symfony\\Component\\HttpKernel\\Kernel::MINOR_VERSION')%}
    {{ parent() }}
    <h1 class="title">{{ title|upper }}</h1>
    
    <p>&nbsp;</p>

    <div class="symfony-blocks-welcome">
      <table border="1" cellspacing="15" cellpadding="15">
        <tr>
         <th>ID</th>
         <th>Name</th>
         <th>Description</th>
       </tr>
       {% for news_category_item in news_categories %}
         <tr>
           <td>{{ news_category_item.id }}</td>
           <td>{{ news_category_item.name }}</td>
           <td>{{ news_category_item.description }}</td>
         </tr>
       {% endfor %} 
      </table>
       
       
        
    </div>

    <div class="symfony-blocks-help">
       
        <a href="{{ path('news_category_add') }}" title="Add a news category">Add</a>
       
    </div>
{% endblock %}
