<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Any.TV{% endblock %}</title>
        {% block favicon %}
          <link rel="icon" type="image/x-icon" href="{{ asset('faviconanytv.ico') }}" />
        {% endblock %}
        {% block stylesheets %}
          <link href="{{ asset('bundles/anytvdashboard/css/structure.css') }}" rel="stylesheet" type="text/css" media="all" />
          <link href="{{ asset('bundles/anytvdashboard/css/body.css') }}" rel="stylesheet" type="text/css" media="all" />
          <link href="{{ asset('bundles/anytvdashboard/css/main.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
        <div id="content">
            <div class="header clear-fix">
                <div class="header-logo">
                  {% block header %}
                  <a href="{{ path('anytv_main_homepage') }}" title="Any.TV">
                    <img src="{{ asset('bundles/anytvmain/images/logo.png') }}" alt="Any.TV" />
                  </a>
                  {% trans %}Believe in you{% endtrans %}
                  {% endblock %}
                </div>

                <div class="search">
                  <div id="trans_menu">
                   {% block transmenu %}
                   <ul>
                     <li>
                       <a href="{{ path('anytv_main_homepage', { _locale: 'en' }) }}" title="Any.TV English">
                         <img src="{{ asset('bundles/anytvmain/images/en.png') }}" alt="Any.TV English" />
                       </a>
                     </li>
                     <li>
                       <a href="{{ path('anytv_main_homepage', { _locale: 'nl' }) }}" title="Any.TV Dutch">
                         <img src="{{ asset('bundles/anytvmain/images/nl.png') }}" alt="Any.TV Dutch" />
                       </a>
                     </li>
                     <li>
                       <a href="{{ path('anytv_main_homepage', { _locale: 'zh' }) }}" title="Any.TV Chinese">
                         <img src="{{ asset('bundles/anytvmain/images/zh.png') }}" alt="Any.TV Chinese" />
                       </a>
                     </li>
                   </ul>
                   {% endblock %}
                 </div>   
                  <div id="main_menu">
                   <ul>
                     <li><a href="{{ path('anytv_main_homepage') }}" title="Any.TV">Any.TV</a></li>
                     <li><a href="{{ path('anytv_dashboard_homepage') }}" title="Any.TV Dashboard">Dashboard</a></li>
                   </ul>
                 </div>    
                </div>
            </div>

            <div class="sf-reset">
            {% block submenu %}
            {% endblock %}
                    
            {% block body %}
              {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-message">
                  <em>Notice</em>: {{ flashMessage }}
                </div>
              {% endfor %}

             <div class="block">
               {% block content %}
                 
               {% endblock %}
             </div>

             {% if code is defined %}
               <h2>Code behind this page</h2>
               <div class="block">
                 <div class="symfony-content">{{ code|raw }}</div>
               </div>
             {% endif %}
           {% endblock %}
            </div>
            {% if app.debug %}
              <p>Request method: {{ app.request.method }}</p>
              <p>Application Environment: {{ app.environment }}</p>
            {% endif %}
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
